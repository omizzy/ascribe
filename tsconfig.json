{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src/",
        "incremental": true,
        "esModuleInterop": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "strict": true
    },
    "exclude": ["node_modules", "dist", "coverage", "documentation"],
    "include": ["index.ts", "src/**/*", ".eslintrc.js"]
}
